# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET           /                                             controllers.ApplicationController.index

GET           /medias                                       controllers.MediaController.getAll
GET           /medias/:id                                   controllers.MediaController.byId(id: Long)
POST          /medias                                       controllers.MediaController.create
DELETE        /medias/:id                                   controllers.MediaController.delete(id: Long)
PUT           /medias/:id                                   controllers.MediaController.update(id: Long)

GET           /medias/:mediaId/subtitles                    controllers.SubtitleController.getAll(mediaId: Long)
GET           /medias/:mediaId/subtitles/:subtitleId        controllers.SubtitleController.byId(mediaId: Long, subtitleId: Long)
PUT           /medias/:mediaId/subtitles/:subtitleId        controllers.SubtitleController.update(mediaId: Long, subtitleId: Long)
DELETE        /medias/:mediaId/subtitles/:subtitleId        controllers.SubtitleController.delete(mediaId: Long, subtitleId: Long)
POST          /medias/:mediaId/subtitles/srt                controllers.SubtitleController.uploadSrt(mediaId: Long)
POST          /medias/:mediaId/subtitles                    controllers.SubtitleController.create(mediaId: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                                 controllers.Assets.versioned(path="/public", file: Asset)
