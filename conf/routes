# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                            controllers.ApplicationController.index

GET         /medias                      controllers.MediaController.getAll
GET         /medias/:id                  controllers.MediaController.byId(id: Long)
DELETE      /medias/:id                  controllers.MediaController.delete(id: Long)
POST        /medias                      controllers.MediaController.create

GET         /medias/:id/subtitles        controllers.SubtitleController.getAll(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
